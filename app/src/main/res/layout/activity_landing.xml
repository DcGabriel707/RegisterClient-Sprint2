<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_landing"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_two"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context="edu.uark.uarkregisterapp.LandingActivity">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"

        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        app:cardCornerRadius="32dp"
        app:cardElevation="12dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:background="@drawable/gradient_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="28dp"
                android:src="@drawable/ic_account_circle_black_72dp" />

            <TextView
                android:id="@+id/text_view_please_sign_in"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="15dp"
                android:text="@string/text_view_please_sign_in"
android:textColor="@color/textColorOne"
                android:textSize="20sp" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="4dp"
                android:gravity="center"
                app:cardCornerRadius="18dp"
                app:cardUseCompatPadding="true">

                <EditText
                    android:id="@+id/edit_text_employee_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/text_view_please_sign_in"
                    android:layout_margin="8dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:background="@null"
                    android:hint="@string/text_view_sign_in_employee_id"
                    android:inputType="text"
                    android:textAlignment="center" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="4dp"
                android:gravity="center"
                app:cardCornerRadius="18dp"
                app:cardUseCompatPadding="true">

                <EditText
                    android:id="@+id/edit_text_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/edit_text_employee_id"
                    android:layout_margin="8dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="24dp"
                    android:background="@null"
                    android:hint="@string/text_view_sign_in_password"
                    android:inputType="textPassword"
                    android:textAlignment="center" />

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#0298FF"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                android:onClick="signInButtonOnClick"
                android:stateListAnimator="@animator/elevate_button"
                app:cardCornerRadius="26dp"
                app:cardElevation="6dp"

                app:cardUseCompatPadding="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="12dp"
                    android:text="@string/button_sign_in"
                    android:background="@drawable/gradient_three"
                    android:textColor="#ffffff"
                    android:textSize="20sp" />
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>
