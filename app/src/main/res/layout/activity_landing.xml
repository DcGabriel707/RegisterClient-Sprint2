<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_landing"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#F5F5F5"
    tools:context="edu.uark.uarkregisterapp.LandingActivity">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="6dp"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp">

            <ImageView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:elevation="28dp"
                android:src="@drawable/ic_account_circle_black_72dp"/>
            <TextView
                android:id="@+id/text_view_please_sign_in"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="30dp"
                android:text="@string/text_view_please_sign_in"

                android:textSize="20sp" />

            <EditText
                android:id="@+id/edit_text_employee_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_view_please_sign_in"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="24dp"
                android:hint="@string/text_view_sign_in_employee_id"
                android:inputType="text" />

            <EditText
                android:id="@+id/edit_text_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edit_text_employee_id"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="24dp"
                android:hint="@string/text_view_sign_in_password"
                android:inputType="textPassword" />

            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:backgroundTint="#0298FF"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                android:onClick="signInButtonOnClick"
                android:stateListAnimator="@animator/elevate_button"
                app:cardCornerRadius="26dp"
                app:cardUseCompatPadding="true"
                app:cardElevation="6dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="12dp"
                    android:text="@string/button_sign_in"

                    android:textColor="#ffffff"
                    android:textSize="20sp" />
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>
