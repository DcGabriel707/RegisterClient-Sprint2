<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="6dp"
        android:background="?attr/selectableItemBackground"
      android:gravity="center"
        android:padding="7dp"
        android:stateListAnimator="@animator/elevate_button"
        app:cardCornerRadius="12dp">

        <LinearLayout
            android:background="@drawable/gradient_five"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="6dp"
android:paddingRight="6dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/list_view_item_product_lookup_code"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="3"
                    android:text="@string/text_view_products_lookup_code"
                    android:textSize="18sp"
                    android:textColor="@color/textColorOne"
                    android:textAlignment="center" />


                <TextView
                    android:id="@+id/list_view_item_price"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="3"
                    android:text="Price"
                    android:textColor="@color/textColorOne"
                    android:textSize="16sp"

                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/list_view_item_product_count"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="3"
                    android:gravity="end"
                    android:text="@string/text_view_products_count"
                    android:textColor="@color/textColorOne"
                    android:textSize="16sp"

                    android:textAlignment="center"

                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:gravity="end|center_vertical"
                android:orientation="horizontal">

                <android.support.v7.widget.CardView
                    android:id="@+id/decrementCardView"
                    android:layout_width="54dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_margin="4dp"
                    android:backgroundTint="#000000"
                    android:clickable="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:gravity="center"
                    android:stateListAnimator="@animator/elevate_button"
                    app:cardCornerRadius="18dp"
                    app:cardElevation="4dp"
                    app:cardUseCompatPadding="true">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="-"
                        android:textAlignment="center"
                        android:textColor="@color/white" />
                </android.support.v7.widget.CardView>

                <TextView
                    android:id="@+id/cart_product_quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:text="0" />

                <android.support.v7.widget.CardView
                    android:id="@+id/incrementCardView"
                    android:layout_width="54dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_margin="4dp"
                    android:backgroundTint="#000000"
                    android:clickable="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:gravity="center"
                    android:stateListAnimator="@animator/elevate_button"
                    app:cardCornerRadius="18dp"
                    app:cardElevation="4dp"
                    app:cardUseCompatPadding="true">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="+"
                        android:textAlignment="center"
                        android:textColor="@color/white" />
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/removeProductCardView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_margin="4dp"
                    android:backgroundTint="#FF5722"
                    android:clickable="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:gravity="center"
                    android:stateListAnimator="@animator/elevate_button"
                    app:cardCornerRadius="18dp"
                    app:cardElevation="4dp"
                    app:cardUseCompatPadding="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="Remove"
                        android:textColor="@color/white" />
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/addProductCardView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_margin="4dp"
                    android:backgroundTint="#4D719E"
                    android:clickable="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:gravity="center"
                    android:stateListAnimator="@animator/elevate_button"
                    app:cardCornerRadius="18dp"
                    app:cardElevation="4dp"
                    app:cardUseCompatPadding="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="Add"
                        android:textColor="@color/white" />
                </android.support.v7.widget.CardView>
            </LinearLayout>

        </LinearLayout>


    </android.support.v7.widget.CardView>


</LinearLayout>