<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_create_employee"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="edu.uark.uarkregisterapp.CreateEmployeeActivity"
    tools:showIn="@layout/activity_create_employee">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="4dp"
        android:backgroundTint="#B4580E"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        android:gravity="center"
        android:stateListAnimator="@animator/elevate_button"
        app:cardCornerRadius="18dp"
        app:cardUseCompatPadding="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gradient_four"
            android:gravity="center">
        <EditText
            android:id="@+id/edit_text_employee_create_first_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@null"
            android:hint="@string/edit_text_hint_employee_create_first_name"
            android:inputType="text"
            android:textAlignment="center"
            android:textColorHint="#868686"  />
        </LinearLayout>
    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="4dp"
        android:backgroundTint="#B4580E"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        android:gravity="center"
        android:stateListAnimator="@animator/elevate_button"
        app:cardCornerRadius="18dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gradient_four"
            android:gravity="center">
        <EditText
            android:id="@+id/edit_text_employee_create_last_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_text_employee_create_first_name"
            android:layout_margin="8dp"
            android:layout_marginTop="5dp"
            android:background="@null"
            android:hint="@string/edit_text_hint_employee_create_last_name"
            android:inputType="text"
            android:textAlignment="center"
            android:textColorHint="#868686"  />
        </LinearLayout>
    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="4dp"
        android:backgroundTint="#B4580E"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        android:gravity="center"
        android:stateListAnimator="@animator/elevate_button"
        app:cardCornerRadius="18dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gradient_four"
            android:gravity="center">

        <EditText
            android:id="@+id/edit_text_employee_create_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_text_employee_create_last_name"
            android:layout_margin="8dp"
            android:layout_marginTop="5dp"
            android:background="@null"

            android:hint="@string/edit_text_hint_employee_create_password"
            android:inputType="textPassword"
            android:textAlignment="center"
            android:textColorHint="#868686"  />
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="4dp"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        android:gravity="center"
        android:stateListAnimator="@animator/elevate_button"
        app:cardCornerRadius="18dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gradient_four"
            android:gravity="center">

            <EditText
                android:id="@+id/edit_text_employee_create_password_confirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edit_text_employee_create_password"
                android:layout_margin="8dp"
                android:layout_marginTop="5dp"
                android:background="@null"
                android:hint="@string/edit_text_hint_employee_create_password_confirm"
                android:inputType="textPassword"
                android:textAlignment="center"
                android:textColorHint="#868686" />
        </LinearLayout>

    </android.support.v7.widget.CardView>


    <ImageButton

        android:id="@+id/button_employee_save"
        style="?android:attr/buttonBarButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:contentDescription="@string/button_save"
        android:onClick="saveButtonOnClick"
        android:src="@drawable/ic_save_black_24dp" />


</LinearLayout>
